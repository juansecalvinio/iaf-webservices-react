{
  "name": "iaf-webservices",
  "version": "1.0.0",
  "author": "jcalvino",
  "license": "ISC",
  "scripts": {
    "build": "NODE_ENV=production npm run dev:server",
    "client": "cd client && npm start",
    "server": "cd server && npx nodemon app.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "dev:server": "cd client && npm run build && cd .. && npm run dev"
  },
  "devDependencies": {
    "concurrently": "^4.0.1"
  }
}
